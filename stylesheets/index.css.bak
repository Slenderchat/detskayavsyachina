*{
	box-sizing: border-box;
}
html{
	font-size: 0.8em;
	height: 100%;
}
body{
	display: table;
	height: 100%;
	margin: 0;
	width: 100%;
}
a{
	background-color: #ff99c2;
	border-bottom: 2px dashed #ff0066;
	color: #ff0066;
	text-decoration: none;
}
hr{
	border-color: black;
	margin: 0;
}
table{
	border-collapse: collapse;
    margin: 0 auto;
}
h1:first-child, h2:first-child, h3:first-child, h4:first-child, h5:first-child, h6:first-child{
	margin-top: 0;
}
h1, h2, h3, h4, h5, h6{
	margin: 10px 0;
}
h1:last-child, h2:last-child, h3:last-child, h4:last-child, h5:last-child, h6:last-child{
	margin-bottom: 0;
}
img{
	max-width: 100%;
	vertical-align: middle;
}
.row{
	display: table-row;
}
.header{
    position: relative;
	background-color: #bad9d4;
	text-align: center;
}
.table{
	border-collapse: collapse;
	display: table;
	width: 100%;
}
.header .table{
    position: relative;
}
.header img{
	max-width: 100%;
    max-height: 100%;
	vertical-align: bottom;
}
.headerbuttonwrap{
    display: none;
    position: absolute;
    bottom: 5px;
    right: 5px;
}
#cart{
    position: absolute;
    right: 0;
    bottom: 5px;
    width: 25px;
    height: 25px;
}
#cart a{
    border: 0;
    background-color: transparent;
}
.button{
    color: #FFFFFF;
    background-color: transparent;
	border-bottom: 2px solid #808080;
	text-align: center;
    margin-right: 5px;
}
.button:last-child{
    margin: 0;
}
.button:hover{
    border-color: #333333;
}
.stretchrow{
    height: 100%;
}
.stretchrow > .table{
    height: 100%;
    background-color: #595959;
}
.cell{
	display: table-cell;
	vertical-align: top;
}
.menu{
    display: inline-block;
	padding: 5px;
}
.menu .button{
    display: inline-block;
    margin: 0;
}
.content{
    color: #FFFFFF;
    width: 100%;
	padding: 20px;
}
.price{
    color: #bf00ff;
    background-color: #ecb3ff;
    border-bottom: 2px dashed #bf00ff;
}
.goodsview{
    border-radius: 8px 8px 0 0;
    box-shadow: 0 0 20px 10px #2F4441;
}
.tableviewcontrol{
    white-space: nowrap;
    border-radius: 8px 8px 0 0;
}
.tableviewcontrol .cell{
    background-color: #E54747;
    border-radius: 8px 8px 0 0;
	padding: 5px;
}
.tableviewcontrol .table:nth-child(2) .cell:nth-child(even){
    width: 0.1%;
}
.tb > .cell{
    background-color: #2F4441;
    padding: 20px;
}
#srch{
    background-color: #8FC6BD;
    box-shadow: 0 0 20px 10px rgba(0, 0, 0, 0.15);
    color: #FFFFFF;
    border: 1px solid black;
    border-radius: 8px;
}
#category{
    
    background-color: #8FC6BD;
    color: #FFFFFF;
    box-shadow: 0 0 20px 10px rgba(0, 0, 0, 0.15);  
    border: 1px solid black;
    border-radius: 8px;
}
.search{
	width: 100%;
}
.search input{
    text-align: center;
	width: 100%;
}
.goodie{
    position: relative;
    min-width: 100%;
    border: 1px solid black;
    border-radius: 8px;
    padding: 5px;
	margin: 10px 0;
    color: #FFFFFF;
    background-color: #2F4441;
}
.goodie .cell{
	padding: 15px;
}
.goodie .button{
    color: #FFFFFF;
}
.goodieinfo{
	width: 60%;
}
.goodieinfo h3{
	margin: 0;
}
.goodie .button:last-child{
	float: right;
}
.imgview{
    position: relative;
    width: 95%;
    margin: 0 auto;
    overflow: visible;
}
.imgview > img{
    position: absolute;
    cursor: pointer;
    top: 40%;
    left: -25px;
    height: 36px;
}
.imgview > img:last-child{
    left: auto;
    right: -35px;
}
.imgview div{
    overflow: hidden;
    white-space: nowrap;
    height: 200px;
}
.imgview img{
    display: inline-block;
    max-width: 100%;
    max-height: 100%;
}
.formcontainer{
    text-align: center;
    padding: 5px;
}
.formelement{
    display: block;
    text-align: center;
    font-size: 1.25em;
    overflow: hidden;
    border: 15px solid #333333;
    background-color: #333333;
    color: #FFFFFF;
    border-radius: 8px;
    margin: auto;
    min-width: 45%;
}
.formerror{
    display: none;
}
.error{
    min-width: 45%;
    text-align: center;
    background-color: #ffb3b3;
    color: #ff0000;
    border-bottom: 2px dashed #ff0000;
    border-radius: 8px;
    padding: 5px;
}
.registerinfo{
    min-width: 45%;
    text-align: center;
    background-color: #b3ffb3;
    color: #00ff00;
    border-bottom: 2px dashed #00ff00;
    border-radius: 8px;
    padding: 5px;
}
.new{
    box-shadow: 0 0 40px 15px rgba(0, 0, 0, 0.15);
    border-bottom: 10px solid transparent;
    border-top: 10px solid transparent;
}
.new:first-child{
    box-shadow: 0 -5px 40px 15px rgba(0, 0, 0, 0.15);
    margin-bottom: 20px;
    border-top: 0;
}
.new:last-child{
    box-shadow: 0 5px 40px 15px rgba(0, 0, 0, 0.15);
    border-bottom: 0;
    border-top: 10px solid transparent;
}
.new .table .cell{
    padding: 20px;
}
.new h1{
    text-align: center;
}
.new h3{
    text-align: justify; 
}
.new h4{
    text-align: right;
}
.goodie .goodiePopup{
    height: 100%;
    padding: 20px;
}
.goodie .goodiePopup .button{
    float: none;
    width: 100%;
    vertical-align: bottom;
}

@media (min-width: 1024px){
	html{
		font-size: 1.25em;
    }
	.goodie{
		float: left;
		width: calc(50% - 5px);
        min-width: calc(50% - 5px);
	}
    .goodie:nth-child(2n-1){
        margin-right: 10px;
    }
}
@media (min-width: 2560px){
	html{
		font-size: 2.5em;
	}
    .goodie{
        width: calc(33% - 5px);
        min-width: calc(33% - 5px);
        margin-right: 10px;
    }
    .goodie:nth-child(3n){
        margin-right: 0;
    }
}